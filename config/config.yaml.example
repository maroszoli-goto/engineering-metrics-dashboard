# GitHub Configuration
github:
  token: "YOUR_GITHUB_TOKEN_HERE"
  organization: "your-org-name"
  
# Jira Configuration
jira:
  server: "https://your-jira-instance.com"
  username: "your-username"
  api_token: "YOUR_JIRA_TOKEN_HERE"

# Teams Configuration
teams:
  - name: "TeamA"
    display_name: "Team A"
    github:
      team_slug: "team-a-slug"
      members:
        - "github-user-1"
        - "github-user-2"
    jira:
      members:
        - "jira-user-1"
        - "jira-user-2"
      filters:
        backlog_in_progress: 12345
        bugs: 12346
        bugs_created: 12347
        bugs_resolved: 12348
        completed_12weeks: 12349
        flagged_blocked: 12350
        recently_released: 12351
        scope: 12352
        wip: 12353

# Data Collection
collection:
  days_back: 84

# Dashboard Configuration
dashboard:
  port: 5000
  debug: true
  cache_duration_minutes: 60
